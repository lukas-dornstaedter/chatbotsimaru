      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container">SAMPLE WEBVIEW</div>
    <div class="row">
      <div class="input-field col s12" id="item-checkboxes"></div>
    </div>
    <form id="retoure-form">
      <div class="row">
        <div class="input-field col s12">
          <input
            placeholder="gib uns die Chance noch besser zu werden"
            id="first_name"
            type="text"
            class="validate"
          />
        </div>
      </div>
      <label for="retour_reason">RÃ¼cksendegrund</label>
    </form>

    <script>
      (function(d, s, id) {
        var js,
          fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {
          return;
        }
        js = d.createElement(s);
        js.id = id;
        js.src = "//connect.facebook.com/en_US/messenger.Extensions.js";
        fjs.parentNode.insertBefore(js, fjs);
      })(document, "script", "Messenger");
      window.extAsyncInit = function() {
        // the Messenger Exstensions JS SDK is done loading
        console.log("hallo hallo");
        $.getJSON("/webviews/settings", function(data) {
          console.log("hallo wie geht es dir :-)");
          console.log(data);
          data.forEach(element => {
            let i = `<label>
        <input id="${element.TransactionId}" type="checkbox" />
        <span>${element.Product.Title}</span>
      </label>`;
            document.querySelector("#item-checkboxes").appendChild(i);
          });
        });
      };
    </script>
  </body>
</html>
